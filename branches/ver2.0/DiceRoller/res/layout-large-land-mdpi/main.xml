	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	    android:background="#6A8048"
		>
  
  		<RelativeLayout
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			
  			android:layout_alignParentLeft="true"
  			
  			android:layout_marginLeft="10dp"
  			
			android:minWidth="240dp"
  			> <!-- Button Container -->

		  	<ImageView
			  	android:id="@+id/d12"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_alignParentBottom="true"
			  	android:layout_centerHorizontal="true"
			  	
			  	android:layout_marginTop="5dp"
			  	android:layout_marginBottom="7dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d12selector"
			></ImageView> <!-- d12 -->

		  	<ImageView
			  	android:id="@+id/d6"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_centerHorizontal="true"
			  	android:layout_above="@id/d12"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d6selector"
			></ImageView> <!-- d6 -->

		  	<ImageView
			  	android:id="@+id/d20"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_above="@id/d6"
			  	android:layout_centerHorizontal="true"
			  	
			  	android:layout_marginBottom="5dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d20selector"
			></ImageView> <!-- d20 -->

		  	<ImageView
			  	android:id="@+id/d8"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_alignBottom="@id/d6"
			  	android:layout_toRightOf="@id/d6"
			  	
			  	android:layout_marginLeft="5dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d8selector"
			></ImageView> <!-- d8 -->

		  	<ImageView
			  	android:id="@+id/d4"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_alignBottom="@id/d6"
			  	android:layout_toLeftOf="@id/d6"
			  	
			  	android:layout_marginRight="5dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d4selector"
			></ImageView> <!-- d4 -->

		  	<ImageView
			  	android:id="@+id/d10"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_alignBottom="@id/d12"
			  	android:layout_toLeftOf="@id/d12"
			  	
			  	android:layout_marginRight="5dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/d10selector"
			></ImageView> <!-- d10 -->

		  	<ImageView
			  	android:id="@+id/dPercent"
			  	
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	
			  	android:layout_alignBottom="@id/d12"
			  	android:layout_toRightOf="@id/d12"
			  	
			  	android:layout_marginLeft="5dp"
			  	
				android:minWidth="75dp"  		
				android:minHeight="75dp"

				android:textSize="18sp"
				android:textColor="@drawable/text_color"

			  	android:onClick="clickHandler"
				android:src="@drawable/dpercent_selector"
			></ImageView> <!-- d100 -->

		</RelativeLayout> <!-- button container -->
  
  		
  		<RelativeLayout
   			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  		
   			android:layout_alignParentRight="true"
  			
			android:minWidth="240dp"
  			> <!-- table container -->  					
			
			<LinearLayout  
				android:id="@+id/clear_quit_block"
			    android:orientation="horizontal"

			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"

				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				
				android:layout_marginBottom="5dp"

			    android:gravity="center_horizontal"

			    android:paddingTop="5dip"
			    > <!-- Button Block -->
			
	   	    	<Button
			    	android:id="@+id/clear_button"
	
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"			    
			    	
			    	android:layout_marginTop="5dp"
			    	
			    	android:minWidth="65dp"
	
			    	android:text="@string/clear"
	
		    		android:onClick="clickListener"
			    ></Button> 
	
	   	    	<Button
			    	android:id="@+id/quit_button"
	
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
	
			    	android:layout_marginTop="5dp"

			    	android:minWidth="65dp"
	
			    	android:text="@string/quit"
	
		    		android:onClick="clickListener"
			    ></Button> 			
			    
		    </LinearLayout>
		    
   			<TableLayout 			
				android:layout_width="wrap_content"
		 		android:layout_height="wrap_content"

				android:layout_centerHorizontal="true"
				android:layout_above="@id/clear_quit_block"

		 		android:layout_gravity="center"
		 				 	
				android:background="#A4A4A4"
		 		>
		 		
			 		<LinearLayout 
		 				android:orientation="horizontal"

		    			android:layout_width="fill_parent"
		    			android:layout_height="wrap_content"

		    			android:gravity="center_horizontal"

				 		android:layout_marginLeft="3px"
				 		android:layout_marginBottom="3px"
					 	android:layout_marginRight="3px"
				 		android:layout_marginTop="3px"

				 		android:minHeight="100dip"		
						android:minWidth="200dip" 				 		 	

				 		android:background="#010101"
						>	 		
				 		
					 		<TextView 
						 		android:id="@+id/tracker1"

						 		android:layout_width="wrap_content"
						 		android:layout_height="wrap_content"

								android:maxHeight="100dip"
								android:maxWidth="100dip"
								android:minWidth="100dip"

								android:paddingLeft="2dip"

								android:textSize="14sp"
								android:lineSpacingExtra="2dip"
					 		></TextView>
					
					 		<TextView 
						 		android:id="@+id/tracker2"

						 		android:layout_width="wrap_content"
						 		android:layout_height="wrap_content"

								android:maxHeight="100dip"
								android:maxWidth="100dip"
								android:minWidth="100dip"

								android:paddingLeft="2dip"

								android:textSize="14sp"
								android:lineSpacingExtra="2dip"
					 		></TextView>
					
					</LinearLayout>
	
			</TableLayout>
		    		
  		</RelativeLayout> <!-- table container -->
  		
	</RelativeLayout>
