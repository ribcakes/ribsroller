<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#6A8048"
    >
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/hello"
		    android:gravity="center_horizontal"
		    />
	    
  		
   	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="center"
		    android:paddingTop="1dip"
		    android:paddingLeft="20dip"
		    >
		    
   	   			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				    android:orientation="vertical"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:gravity="center"
				    android:paddingTop="5dip"
				    > <!-- Images Block -->
				    
			    	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						    android:orientation="horizontal"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:gravity="center_horizontal"
						    android:paddingTop="5dip"
						    > <!-- D20 -->
						    
				    	  		<ImageView
								  	android:id="@+id/d20"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d20selector"
									android:minHeight="75dp"
									android:minWidth="75dp"
								  	></ImageView>						    
					    </LinearLayout>	
					    
				        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						    android:orientation="horizontal"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:gravity="center_horizontal"
						    android:paddingTop="5dip"
						    >  <!-- D4/6/8 -->
						    							  	
							  	<ImageView
								  	android:id="@+id/d4"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d4selector"
								  	android:paddingRight="5dip"
									android:minHeight="75dp"
									android:minWidth="75dp"
							  		></ImageView>
							  			  	
							  	<ImageView
								  	android:id="@+id/d6"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d6selector"
								  	android:paddingRight="5dip"
									android:minHeight="75dp"
									android:minWidth="75dp"
							  		></ImageView>			  		
							  		
							  	<ImageView
								  	android:id="@+id/d8"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d8selector"
							  		android:paddingRight="5dip"
									android:minHeight="75dp"
									android:minWidth="75dp"
							  		></ImageView>  		
						</LinearLayout>	
						
					    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						    android:orientation="horizontal"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:gravity="center_horizontal"
						    android:paddingTop="5dip"
						    > <!-- D10/12/% -->	

							  	<ImageView
								  	android:id="@+id/d10"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d10selector"
								  	android:paddingRight="5dip"
									android:minHeight="75dp"
									android:minWidth="75dp"
								  	></ImageView>
								  	
					  		  	<ImageView
								  	android:id="@+id/d12"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
								  	android:src="@drawable/d12selector"
								  	android:paddingRight="5dip"
									android:minHeight="75dp"
									android:minWidth="75dp"
							  		></ImageView>
							  			  	
							  	<ImageView
								  	android:id="@+id/dPercent"
								  	android:layout_width="wrap_content"
								  	android:layout_height="wrap_content"
								  	android:onClick="clickHandler"
									android:src="@drawable/dpercent_selector"
									android:minHeight="75dp"
									android:minWidth="75dp"
							  		></ImageView>				  	
						</LinearLayout>	

				</LinearLayout> <!-- End Image Block -->
				    
			    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:gravity="center_horizontal"
				    android:paddingTop="5dip"
				    >  <!-- Text Box block -->
			
					
						<TableLayout 
							android:layout_width="wrap_content"
					 		android:layout_height="wrap_content"
					 		android:layout_gravity="center"
							android:background="#A4A4A4"
					 		>
					 		
						 		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					 				android:orientation="horizontal"
					    			android:layout_width="fill_parent"
					    			android:layout_height="wrap_content"
					    			android:gravity="center_horizontal"
							 		android:layout_marginLeft="3px"
							 		android:layout_marginBottom="3px"
								 	android:layout_marginRight="3px"
							 		android:layout_marginTop="3px"
							 		android:minHeight="100dip"		
									android:minWidth="200dip" 				 		 	
							 		android:background="#010101"
									>	 		
							 		
								 		<TextView 
									 		android:id="@+id/tracker1"
									 		android:layout_width="wrap_content"
									 		android:layout_height="wrap_content"
											android:maxHeight="100dip"
											android:maxWidth="100dip"
											android:minWidth="100dip"
											android:paddingLeft="2dip"
											android:textSize="14sp"
											android:lineSpacingExtra="2dip"
									 		/>
								
								 		<TextView 
									 		android:id="@+id/tracker2"
									 		android:layout_width="wrap_content"
									 		android:layout_height="wrap_content"
											android:maxHeight="100dip"
											android:maxWidth="100dip"
											android:minWidth="100dip"
											android:paddingLeft="2dip"
											android:textSize="14sp"
											android:lineSpacingExtra="2dip"
									 		/>
								</LinearLayout>
				
						</TableLayout>
						
						
						<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
						    android:orientation="horizontal"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:gravity="center_horizontal"
						    android:paddingTop="5dip"
						    > <!-- Button Block -->
						    
			        	    	<Button
							    	android:id="@+id/clearbutton"
							    	android:text="@string/clear"
							    	android:layout_width="wrap_content"
							    	android:layout_height="wrap_content"
						    		android:onClick="clickListener"
							    	/>  
											        
						    	<Button 
						    		android:id="@+id/quitbutton"
						    		android:text="@string/quit"
						    		android:layout_width="wrap_content"
						    		android:layout_height="wrap_content"
						    		android:onClick="clickListener"
						    		/>
						</LinearLayout> <!-- End Button Block -->
						
				</LinearLayout> <!-- End Text Box Block -->	    

    	</LinearLayout>

</LinearLayout>
